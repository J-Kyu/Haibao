<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#eeeeee"
    android:orientation="vertical"


    android:layout_width="300dp"
    android:layout_height="500dp"



    tools:context=".Post.Poster_Info">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="Title"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/little_black"/>

    <ImageView
        android:id="@+id/poster_View"
        android:layout_width="match_parent"

        android:layout_height="203dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher_round" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15">

        <LinearLayout
            android:id="@+id/linearLayout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/h_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Location"
                android:textColor="@color/little_black"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="특정 장소"
                android:textColor="@color/little_black"
                />




            <TextView
                android:id="@+id/h_due"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Dueration"
                android:textColor="@color/little_black"
                />

            <TextView
                android:id="@+id/tv_due"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="2018/10/31~2018/10/31"
                android:textColor="@color/little_black"
                />


            <TextView
                android:id="@+id/h_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Host"
                android:textColor="@color/little_black"
                />

            <TextView
                android:id="@+id/tv_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="주최자"
                android:textColor="@color/little_black"
                />


            <TextView
                android:id="@+id/h_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Description"
                android:textColor="@color/little_black"
                />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="설명"
                android:textColor="@color/little_black"
                />



            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"

                />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/close_B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"


        android:text="확인"
        android:textSize="15sp"
        android:textColor="#ff7a00"
        android:padding="16dp"
        android:gravity="center"
        android:background="#00000000"

        android:onClick="mOnClose"/>


</LinearLayout>